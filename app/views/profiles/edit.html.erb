<h1>Editing personal data</h1>

<% semantic_form_for(current_user, :url=>:profile, :html=>{:multipart=>true} ) do |f| -%>
  <% f.inputs do %>
    <%= f.input :dob, :as => :date, :start_year => Time.now.year -
100, :end_year => Time.now.year %>
    <%= f.input :avatar %>
    <% if current_user.avatar_file_name %>
      <p>Current:
      <%= image_tag current_user.avatar.url(:thumb) %></p>
    <% end %>
  <% end %>

  <%= f.inputs :username, :email, :firstname, :lastname, :about -%>

  <% f.buttons do %>
    <%= f.commit_button 'Apply changes' %>
  <% end %>
<% end %>

